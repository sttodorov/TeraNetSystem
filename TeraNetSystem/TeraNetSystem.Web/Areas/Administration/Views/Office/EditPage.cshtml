@model TeraNetSystem.Web.Areas.Administration.Models.OfficeViewModel

@{
    ViewBag.Title = "Edit office";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        @Html.Partial("_OfficePartial")
    </div>

    <div class="form-actions no-color row">
        <button class="button button-rounded button-flat-primary" type="submit">
            Apply
        </button>
        <a class="button button-rounded button-flat-caution" href="@Url.Action("ListOffices", "Office")">
            Cancel
        </a>
    </div>
}


