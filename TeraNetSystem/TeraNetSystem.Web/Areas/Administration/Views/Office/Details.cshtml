@model TeraNetSystem.Web.Areas.Administration.Models.OfficeViewModel

@{
    ViewBag.Title = "Office details";
}

<div class="row">
    @Html.Partial("_OfficePartial")
</div>

<a class="button button-rounded button-flat-caution" href="@Url.Action("ListOffices", "Office")">
    Back to list
</a>

@section scripts
{
    <script>
        $('#ShowPayments').click(function () {
            var $this = $(this);
            var $paymentBox = $('#OfficeLastPaymments');

            if ($paymentBox.hasClass('hide')) {
                $paymentBox.removeClass('hide');
                $this.text('Hide payments');
            } else {
                $paymentBox.addClass('hide');
                $this.text('Show payments');
            }
        });
    </script>
}
