@model TeraNetSystem.Web.Areas.Administration.Models.OfficeViewModel
<h2>
    @ViewBag.Title

</h2>

<div class="content-box box-default">
    <div class="row">
        <div class="col-md-4">
            <img src="@Url.Content(Model.ImagePath)" alt="OfficeImage" class="img-responsive">
        </div>
        <div class="col-md-8">
            <h4 class="content-box-title">@Html.DisplayFor(m => m.Id)</h4>

            <ul class="list-unstyled text-left">
                <li class="row">
                    <span class="col-lg-3 no-padding">@Html.LabelFor(m => m.TownName)</span>
                    @Html.DisplayFor(m => m.TownName)
                </li>
                <li class="row">
                    <span class="col-lg-3 no-padding">@Html.LabelFor(m => m.Address)</span>
                    @if (ViewBag.Title == "Edit office")
                    {
                        @Html.EditorFor(m => m.Address, new { Value = Model.Address})
                    }
                    else
                    {
                        @Html.DisplayFor(m => m.Address)
                    }
                </li>
                <li class="row">
                    <span class="col-lg-3 no-padding">
                        @Html.LabelFor(m => m.Phone)
                    </span>
                    @if (ViewBag.Title == "Edit office")
                    {
                        @Html.EditorFor(m => m.Phone, new { Value = Model.Phone})
                    }
                    else
                    {
                        @Html.DisplayFor(m => m.Phone)
                    }
                </li>
            </ul>

            @if (ViewBag.Title == "Office details")
            {
                <button id="ShowPayments" class="button button-flat-primary">Show payments</button>
            }

            <div id="OfficeLastPaymments" class="text-left border-box hide">
                @{
                    if (Model.Payments.Any())
                    {
                        @Html.Partial("_ListPaymentsPartial", Model.Payments.OrderByDescending(p => p.DateCreated).Take(3))
                    }
                    else
                    {
                        @: No Payments
                    }
                }
            </div>
        </div>
    </div>
</div>
