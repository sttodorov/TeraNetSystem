@model TeraNetSystem.Web.Areas.Administration.Models.TownCreateModel
@{
    ViewBag.Title = "Add town";
}


@using (Html.BeginForm("Create", "Town", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal admin-panel", role = "form" }))
{
    <h2>@ViewBag.Title</h2>

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="input-group login-input">
        <label>@Html.LabelFor(m => m.Name)</label>
        <br />
        @Html.EditorFor(m => m.Name)
    </div>

    <div >
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <br>

    <button type="submit" class="button button-rounded button-flat-primary">
        <i class="fa fa-upload">
            Add
        </i>
    </button>

    <div class="clearfix"></div>
}

