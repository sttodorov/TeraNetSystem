@model TeraNetSystem.Web.Areas.Office.Models.OfficeSubscriptionViewModel

@{
    ViewBag.Title = "Edit subscription";
}

<div class="admin-panel">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            @Html.Partial("_SubscriptionPartial")
        </div>

        <div class="form-actions no-color row">
            <button class="button button-rounded button-flat-primary" type="submit">
                Apply
            </button>
            <a class="button button-rounded button-flat-caution" href="@Url.Action("ListSubscriptions", "Subscription")">
                Cancel
            </a>
        </div>
    }
</div>
