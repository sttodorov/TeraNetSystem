@model TeraNetSystem.Web.Models.OfficeViewModel
@if (ViewBag.Title != "Contacts")
{
    <h2>
        @ViewBag.Title
    </h2>
}

<div class="content-box box-default margin-top">
    <div class="row">
        <div class="col-md-4">
            <img src="@Url.Content(Model.ImagePath)" alt="OfficeImage" class="img-responsive" width="250">
        </div>
        <div class="col-md-8">
            <div class="row margin-bottom">
                @Html.LabelFor(m => m.Name)
                @if (ViewBag.Title == "Edit office")
                {
                    <center> @Html.EditorFor(m => m.Name, new { Value = Model.Name })</center>
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                }
                else
                {
                    <h3 class="margin-bottom ">
                        @Html.DisplayFor(m => m.Name)
                    </h3>
                }
            </div>


            <ul class="list-unstyled text-left">
                <li class="row">
                    <span class="col-lg-3 no-padding">@Html.LabelFor(m => m.Id)</span>
                    @Html.DisplayFor(m => m.Id)
                </li>
                <li class="row">
                    <span class="col-lg-3 no-padding">@Html.LabelFor(m => m.TownName)</span>
                    @Html.DisplayFor(m => m.TownName)
                </li>
                <li class="row">
                    <span class="col-lg-3 no-padding">@Html.LabelFor(m => m.Address)</span>
                    @if (ViewBag.Title == "Edit office")
                    {
                        @Html.EditorFor(m => m.Address, new { Value = Model.Address })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                    }
                    else
                    {
                        @Html.DisplayFor(m => m.Address)
                    }
                </li>
                <li class="row">
                    <span class="col-lg-3 no-padding">
                        @Html.LabelFor(m => m.Phone)
                    </span>
                    @if (ViewBag.Title == "Edit office")
                    {
                        @Html.EditorFor(m => m.Phone, new { Value = Model.Phone })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })

                    }
                    else
                    {
                        @Html.DisplayFor(m => m.Phone)
                    }
                </li>
            </ul>
            @if (ViewBag.Title != "Contacts")
            {
                Html.RenderPartial("_AdminOfficePartial", Model);
            }
        </div>
    </div>
</div>
